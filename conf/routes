# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

GET     /api/users/read        api.UserApi.index
GET     /api/users/read/:id    api.UserApi.read(id: Integer)
POST    /api/users/create      api.UserApi.create
POST    /api/users/update      api.UserApi.update
GET     /api/users/delete/:id  api.UserApi.delete(id: Integer)

GET     /api/user/:id/feeds/read            api.FeedApi.index(id: Integer)
GET     /api/user/:id/feeds/read/:fid       api.FeedApi.read(id: Integer, fid: Integer)
POST    /api/user/:id/feeds/update          api.FeedApi.update(id: Integer)
GET     /api/user/:id/feed/:fid/getTitles   api.FeedApi.getFeedTitles(id: Integer, fid: Integer)
GET     /api/user/:id/feeds/reload          api.FeedApi.reloadFeeds(id: Integer)
GET     /api/user/:id/article/:fid          api.FeedApi.getArticle(id: Integer, fid: Integer)
GET     /api/user/:id/article/:fid          api.FeedApi.markAsRead(id: Integer, fid: Integer)
GET     /api/user/:id/article/:fid          api.FeedApi.maskAsUnRead(id: Integer, fid: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
